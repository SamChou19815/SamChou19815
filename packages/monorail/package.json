{
  "name": "@dev-sam/monorail",
  "description": "Developer Sam's repository tools.",
  "version": "0.0.1",
  "private": true,
  "bin": "./bin/monorail",
  "scripts": {
    "build": "run -T tsc",
    "codegen": "NODE_NO_WARNINGS=1 node build.js",
    "compile": "yarn build && yarn codegen && git diff --quiet --exit-code"
  },
  "devDependencies": {
    "@types/jest": "^25.2.3",
    "@types/node": "^14.0.14",
    "@zeit/ncc": "^0.22.3"
  },
  "codegenConfiguration": {
    "sources": "src",
    "output": "bin/monorail"
  }
}
