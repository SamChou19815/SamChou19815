{
  "private": true,
  "scripts": {
    "common:firebase": "firebase",
    "format": "prettier --write '**/*.{ts,js,tsx,jsx,scss,css,html}'",
    "format:check": "prettier --check '**/*.{ts,js,tsx,jsx,scss,css,html}'",
    "lint": "NODE_NO_WARNINGS=1 eslint . --cache",
    "test": "NODE_NO_WARNINGS=1 jest",
    "compile": "yarn workspaces foreach -v run compile"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/core": "^7.10.4",
    "@dev-sam/eslint-config-common": "workspace:^0.14.0",
    "@typescript-eslint/eslint-plugin": "^3.6.0",
    "@typescript-eslint/parser": "^3.6.0",
    "babel-jest": "^26.1.0",
    "eslint": "^7.4.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-node": "^0.3.4",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^4.0.7",
    "firebase-tools": "^8.5.0",
    "husky": "^4.2.5",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.1.0",
    "lint-staged": "^10.2.11",
    "next": "^9.4.4",
    "next-transpile-modules": "^3.3.0",
    "prettier": "2.0.5",
    "react-test-renderer": "^16.13.1",
    "typescript": "^3.9.6",
    "webpack": "^4.43.0",
    "worker-loader": "^2.0.0"
  },
  "peerDependencies": {
    "react": "^16.13.1"
  },
  "dependenciesMeta": {
    "@ampproject/toolbox-optimizer": {
      "built": false
    },
    "core-js": {
      "built": false
    },
    "core-js-pure": {
      "built": false
    },
    "ejs": {
      "built": false
    }
  },
  "repoToolsConfiguration": {
    "binary": "./packages/monorail/bin/monorail",
    "organizationName": "SamChou19815",
    "toolingPrefixes": [
      "@dev-sam/",
      "vscode-"
    ],
    "deploymentSecrets": [
      "ALGOLIA_PRIVATE_SEARCH_KEY",
      "FIREBASE_TOKEN"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@dev-sam/common"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "endOfLine": "lf",
    "proseWrap": "always"
  },
  "husky": {
    "hooks": {
      "pre-commit": "NODE_NO_WARNINGS=1 lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{ts,js,tsx,jsx,scss,css,html}": [
      "yarn prettier --write"
    ]
  }
}
