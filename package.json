{
  "private": true,
  "scripts": {
    "common:firebase": "firebase",
    "format": "prettier --write '**/*.{ts,js,tsx,jsx,scss,css,html,md}'",
    "format:check": "prettier --check '**/*.{ts,js,tsx,jsx,scss,css,html,md}'",
    "lint": "eslint . --cache",
    "test": "jest",
    "bump": "yarn bump:types && yarn bump:tools && yarn bump:linters",
    "bump:types": "yarn up @types/jest @types/node @types/react @types/react-dom",
    "bump:tools": "yarn up typescript prettier jest babel-jest husky lint-staged @babel/core",
    "bump:linters": "yarn up eslint \"@typescript-eslint/*\" \"eslint-*\"",
    "bundle": "./packages/monorail/bin/index bundle",
    "codegen": "yarn sam-codegen repo-codegen-services",
    "compile": "./packages/monorail/bin/index compile"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@dev-sam/codegen-cli": "workspace:^0.0.2",
    "@dev-sam/eslint-config-common": "workspace:^0.17.0",
    "@dev-sam/monorail": "workspace:packages/monorail",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "babel-jest": "^26.6.0",
    "eslint": "^7.11.0",
    "eslint-import-resolver-node": "^0.3.4",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.21.4",
    "eslint-plugin-react-hooks": "^4.1.2",
    "husky": "^4.3.0",
    "jest": "^26.6.0",
    "lint-staged": "^10.4.2",
    "next": "^9.5.3",
    "prettier": "^2.1.2",
    "repo-codegen-services": "workspace:^0.0.1",
    "typescript": "^4.0.3"
  },
  "peerDependencies": {
    "react": "^16.14.0"
  },
  "resolve": {},
  "dependenciesMeta": {
    "@ampproject/toolbox-optimizer": {
      "built": false
    },
    "core-js": {
      "built": false
    },
    "core-js-pure": {
      "built": false
    },
    "ejs": {
      "built": false
    }
  },
  "eslintConfig": {
    "extends": [
      "@dev-sam/common"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "endOfLine": "lf",
    "proseWrap": "always"
  },
  "husky": {
    "hooks": {
      "pre-commit": "NODE_NO_WARNINGS=1 lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{ts,js,tsx,jsx,scss,css,html,md}": [
      "yarn prettier --write"
    ]
  }
}
