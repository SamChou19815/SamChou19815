{
  "private": true,
  "packageManager": "pnpm@7.9.0",
  "scripts": {
    "check": "turbo run check",
    "build": "turbo run build",
    "format": "prettier --write '**/*.{ts,js,tsx,jsx,css,html,md,yml}'",
    "format:check": "prettier --check '**/*.{ts,js,tsx,jsx,css,html,md,yml}'",
    "lint": "eslint . --cache",
    "bump": "pnpm up -r --latest @types/node @types/react @types/react-dom typescript husky lint-staged esbuild eslint \"@typescript-eslint/*\" \"eslint-*\""
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@dev-sam/eslint-config-common": "0.23.0",
    "@types/node": "^18.7.17",
    "@types/react": "^18.0.19",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.37.0",
    "esbuild": "^0.15.7",
    "eslint": "^8.23.1",
    "eslint-plugin-react": "^7.31.8",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "postcss": "^8.4.16",
    "prettier": "^2.7.1",
    "prettier-plugin-organize-imports": "^3.1.1",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "tailwindcss": "^3.1.8",
    "turbo": "^1.4.3",
    "typescript": "^4.8.3"
  },
  "eslintConfig": {
    "extends": [
      "@dev-sam/common"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "endOfLine": "lf",
    "proseWrap": "always",
    "pluginSearchDirs": [
      "."
    ]
  },
  "lint-staged": {
    "**/*.{ts,js,tsx,jsx,scss,css,html,md,yml}": [
      "pnpm prettier --write"
    ]
  }
}
