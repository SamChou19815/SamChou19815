{
  "private": true,
  "packageManager": "pnpm@6.29.2",
  "scripts": {
    "compile": "turbo run compile",
    "build": "turbo run build",
    "format": "prettier --write '**/*.{ts,js,tsx,jsx,css,html,md,yml}'",
    "format:check": "prettier --check '**/*.{ts,js,tsx,jsx,css,html,md,yml}'",
    "lint": "eslint . --cache",
    "test": "jest",
    "bump": "pnpm up -r @types/jest @types/node typescript jest husky lint-staged esbuild eslint \"@typescript-eslint/*\" \"eslint-*\""
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@dev-sam/eslint-config-common": "0.23.0",
    "@dev-sam/jest-esbuild-transformer": "0.4.0",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.21",
    "@types/react": "^17.0.38",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "esbuild": "^0.14.25",
    "eslint": "^8.10.0",
    "eslint-import-resolver-node": "^0.3.6",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-react": "^7.29.3",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.5",
    "postcss": "^8.4.5",
    "prettier": "^2.5.1",
    "prettier-plugin-organize-imports": "^2.3.4",
    "prettier-plugin-tailwindcss": "^0.1.4",
    "tailwindcss": "^3.0.1",
    "turbo": "^1.1.2",
    "typescript": "^4.6.2"
  },
  "eslintConfig": {
    "extends": [
      "@dev-sam/common"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "endOfLine": "lf",
    "proseWrap": "always",
    "pluginSearchDirs": [
      "."
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$": "@dev-sam/jest-esbuild-transformer"
    }
  },
  "lint-staged": {
    "**/*.{ts,js,tsx,jsx,scss,css,html,md,yml}": [
      "pnpm prettier --write"
    ]
  }
}
