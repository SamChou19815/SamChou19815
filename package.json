{
  "private": true,
  "scripts": {
    "format": "prettier --write '**/*.{ts,js,tsx,jsx,scss,css,html,json}'",
    "format:check": "prettier --check '**/*.{ts,js,tsx,jsx,scss,css,html,json}'",
    "lint": "eslint . --ext .js --ext .ts --ext .jsx --ext .tsx",
    "lint:fix": "yarn lint --fix"
  },
  "engines": {
    "yarn": ">=1.21.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/jest": "^25.1.4",
    "@types/node": "^13.9.3",
    "@types/react": "^16.9.25",
    "@types/react-dom": "^16.9.5",
    "@types/react-test-renderer": "^16.9.2",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-config-react-app": "^5.2.1",
    "eslint-plugin-flowtype": "^4.7.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^2.5.1",
    "firebase-tools": "^7.16.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.9",
    "prettier": "2.0.2",
    "react-app-rewired": "^2.1.5",
    "react-scripts": "3.4.1",
    "react-snap": "^1.23.0",
    "react-test-renderer": "^16.13.1",
    "typescript": "3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{ts,js,tsx,jsx,scss,css,html,json}": [
      "prettier --write"
    ]
  }
}
