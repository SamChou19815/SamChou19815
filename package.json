{
  "private": true,
  "scripts": {
    "check": "turbo run compile",
    "build": "turbo run build",
    "format": "prettier --write '**/*.{ts,js,tsx,jsx,css,html,md,yml}'",
    "format:check": "prettier --check '**/*.{ts,js,tsx,jsx,css,html,md,yml}'",
    "lint": "eslint . --cache",
    "test": "jest",
    "bump": "pnpm up -r @types/jest @types/node typescript jest husky lint-staged esbuild eslint \"@typescript-eslint/*\" \"eslint-*\""
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@dev-sam/eslint-config-common": "0.23.0",
    "@dev-sam/jest-esbuild-transformer": "0.4.0",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.6",
    "@types/react": "^17.0.38",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "esbuild": "^0.14.10",
    "eslint": "^8.6.0",
    "eslint-import-resolver-node": "^0.3.6",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^7.0.4",
    "jest": "^27.4.5",
    "lint-staged": "^12.1.5",
    "postcss": "^8.4.5",
    "prettier": "^2.5.1",
    "prettier-plugin-organize-imports": "^2.3.4",
    "tailwindcss": "^3.0.1",
    "turbo": "^1.0.24",
    "typescript": "^4.5.4"
  },
  "turbo": {
    "baseBranch": "origin/main",
    "npmClient": "pnpm",
    "globalDependencies": [
      "configuration/*"
    ],
    "pipeline": {
      "compile": {
        "dependsOn": [
          "^compile"
        ],
        "outputs": [
          "tsconfig.tsbuildinfo"
        ]
      },
      "build": {
        "dependsOn": [
          "esbuild-scripts#bundle"
        ],
        "outputs": [
          "build/**"
        ]
      },
      "esbuild-scripts#bundle": {
        "outputs": [
          "api.js"
        ]
      },
      "deploy": {
        "dependsOn": [
          "build"
        ]
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "@dev-sam/common"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "endOfLine": "lf",
    "proseWrap": "always",
    "pluginSearchDirs": [
      "."
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$": "@dev-sam/jest-esbuild-transformer"
    }
  },
  "lint-staged": {
    "**/*.{ts,js,tsx,jsx,scss,css,html,md,yml}": [
      "pnpm prettier --write"
    ]
  }
}
