{
  "private": true,
  "packageManager": "pnpm@7.2.1",
  "scripts": {
    "check": "turbo run check",
    "build": "turbo run build",
    "format": "prettier --write '**/*.{ts,js,tsx,jsx,css,html,md,yml}'",
    "format:check": "prettier --check '**/*.{ts,js,tsx,jsx,css,html,md,yml}'",
    "lint": "eslint . --cache",
    "bump": "pnpm up -r @types/node typescript husky lint-staged esbuild eslint \"@typescript-eslint/*\" \"eslint-*\""
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@dev-sam/eslint-config-common": "0.23.0",
    "@types/node": "^17.0.42",
    "@types/react": "^18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "esbuild": "^0.14.43",
    "eslint": "^8.17.0",
    "eslint-import-resolver-node": "^0.3.6",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-react": "^7.30.0",
    "eslint-plugin-react-hooks": "^4.5.0",
    "husky": "^8.0.1",
    "lint-staged": "^12.5.0",
    "postcss": "^8.4.14",
    "prettier": "^2.6.2",
    "prettier-plugin-organize-imports": "^2.3.4",
    "prettier-plugin-tailwindcss": "^0.1.11",
    "tailwindcss": "^3.1.2",
    "turbo": "^1.2.16",
    "typescript": "^4.7.3"
  },
  "eslintConfig": {
    "extends": [
      "@dev-sam/common"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "endOfLine": "lf",
    "proseWrap": "always",
    "pluginSearchDirs": [
      "."
    ]
  },
  "lint-staged": {
    "**/*.{ts,js,tsx,jsx,scss,css,html,md,yml}": [
      "pnpm prettier --write"
    ]
  }
}
