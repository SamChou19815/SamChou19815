{
  "private": true,
  "packageManager": "pnpm@8.2.0",
  "scripts": {
    "check": "turbo run check",
    "build": "turbo run build",
    "cp-dist": "rm -rf dist && mkdir dist && pnpm cp-dist:samlang && pnpm cp-dist:www",
    "cp-dist:samlang": "cp -r packages/samlang/build dist/samlang",
    "cp-dist:www": "cp -r packages/www/build dist/www",
    "format": "rome format --write .",
    "lint": "rome check .",
    "bump": "pnpm up -r --latest @types/node @types/react @types/react-dom typescript husky lint-staged esbuild"
  },
  "workspaces": ["packages/*"],
  "devDependencies": {
    "@types/node": "^18.15.11",
    "@types/react": "^18.0.34",
    "esbuild": "^0.17.16",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1",
    "postcss": "^8.4.19",
    "rome": "^11.0.0",
    "tailwindcss": "^3.2.4",
    "turbo": "^1.9.1",
    "typescript": "^5.0.4"
  },
  "lint-staged": {
    "**/*.{ts,js,tsx,jsx}": ["pnpm rome format --write"]
  }
}
