{
  "private": true,
  "packageManager": "pnpm@8.5.1",
  "scripts": {
    "check": "turbo run check",
    "build": "turbo run build",
    "cp-dist": "rm -rf dist && mkdir dist && pnpm cp-dist:samlang && pnpm cp-dist:www",
    "cp-dist:samlang": "cp -r packages/samlang/build dist/samlang",
    "cp-dist:www": "cp -r packages/www/build dist/www",
    "format": "rome format --write .",
    "lint": "rome check .",
    "bump": "pnpm up -r --latest @types/node @types/react @types/react-dom typescript husky lint-staged esbuild turbo"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/node": "^20.2.3",
    "@types/react": "^18.2.6",
    "esbuild": "^0.17.19",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "postcss": "^8.4.19",
    "rome": "^12.1.2",
    "tailwindcss": "^3.2.4",
    "turbo": "^1.9.9",
    "typescript": "^5.0.4"
  },
  "lint-staged": {
    "**/*.{ts,js,tsx,jsx}": [
      "pnpm rome format --write"
    ]
  }
}
