{
  "private": true,
  "scripts": {
    "common:firebase": "firebase",
    "format": "prettier --write '**/*.{ts,js,tsx,jsx,scss,css,html,md}'",
    "format:check": "prettier --check '**/*.{ts,js,tsx,jsx,scss,css,html,md}'",
    "lint": "NODE_NO_WARNINGS=1 eslint . --cache",
    "test": "NODE_NO_WARNINGS=1 jest",
    "compile": "./packages/monorail/bin/monorail compile"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/core": "^7.11.1",
    "@dev-sam/eslint-config-common": "workspace:^0.17.0",
    "@dev-sam/monorail": "workspace:packages/monorail",
    "@typescript-eslint/eslint-plugin": "^3.10.0",
    "@typescript-eslint/parser": "^3.10.0",
    "babel-jest": "^26.3.0",
    "eslint": "^7.7.0",
    "eslint-import-resolver-node": "^0.3.4",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.1.0",
    "husky": "^4.2.5",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.4.0",
    "lint-staged": "^10.2.11",
    "next": "^9.5.2",
    "prettier": "2.1.0",
    "typescript": "^4.0.2",
    "webpack": "^4.44.1"
  },
  "peerDependencies": {
    "react": "^16.13.1"
  },
  "dependenciesMeta": {
    "@ampproject/toolbox-optimizer": {
      "built": false
    },
    "core-js": {
      "built": false
    },
    "core-js-pure": {
      "built": false
    },
    "ejs": {
      "built": false
    }
  },
  "repoToolsConfiguration": {
    "deploymentSecrets": [
      "FIREBASE_TOKEN"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@dev-sam/common"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "endOfLine": "lf",
    "proseWrap": "always"
  },
  "husky": {
    "hooks": {
      "pre-commit": "NODE_NO_WARNINGS=1 lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{ts,js,tsx,jsx,scss,css,html,md}": [
      "yarn prettier --write"
    ]
  }
}
