{
  "private": true,
  "scripts": {
    "common:firebase": "firebase",
    "format": "prettier --write '**/*.{ts,js,tsx,jsx,scss,css,html,md}'",
    "format:check": "prettier --check '**/*.{ts,js,tsx,jsx,scss,css,html,md}'",
    "lint": "eslint . --cache",
    "test": "jest",
    "bump": "yarn up @types/jest @types/node @types/react @types/react-dom typescript prettier jest babel-jest husky lint-staged @babel/core eslint \"@typescript-eslint/*\" \"eslint-*\"",
    "bundle": "yarn workspaces foreach run bundle",
    "codegen": "yarn sam-codegen",
    "compile": "./packages/monorail/bin/index"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@dev-sam/codegen-cli": "workspace:^0.0.2",
    "@dev-sam/eslint-config-common": "workspace:^0.19.0",
    "@dev-sam/monorail": "workspace:packages/monorail",
    "@typescript-eslint/eslint-plugin": "^4.11.1",
    "@typescript-eslint/parser": "^4.11.1",
    "babel-jest": "^26.6.3",
    "eslint": "^7.16.0",
    "eslint-import-resolver-node": "^0.3.4",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "next": "^10.0.3",
    "prettier": "^2.2.1",
    "typescript": "^4.1.3"
  },
  "peerDependencies": {
    "react": "^17.0.1"
  },
  "dependenciesMeta": {
    "@ampproject/toolbox-optimizer": {
      "built": false
    },
    "core-js": {
      "built": false
    },
    "core-js-pure": {
      "built": false
    },
    "ejs": {
      "built": false
    }
  },
  "eslintConfig": {
    "extends": [
      "@dev-sam/common"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "endOfLine": "lf",
    "proseWrap": "always"
  },
  "husky": {
    "hooks": {
      "pre-commit": "NODE_NO_WARNINGS=1 lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{ts,js,tsx,jsx,scss,css,html,md}": [
      "yarn prettier --write"
    ]
  }
}
