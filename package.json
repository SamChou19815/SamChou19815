{
  "private": true,
  "scripts": {
    "format": "prettier --write '**/*.{ts,js,tsx,jsx,scss,css,html}'",
    "format:check": "prettier --check '**/*.{ts,js,tsx,jsx,scss,css,html}'",
    "lint": "eslint . --ext .js --ext .ts --ext .jsx --ext .tsx",
    "lint:fix": "yarn lint --fix"
  },
  "engines": {
    "yarn": ">=1.21.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@docusaurus/module-type-aliases": "^2.0.0-alpha.55",
    "@types/classnames": "^2.2.10",
    "@types/jest": "25.2.3",
    "@types/node": "14.0.1",
    "@types/react": "16.9.35",
    "@types/react-dom": "16.9.8",
    "@types/react-test-renderer": "16.9.2",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "babel-jest": "^26.0.1",
    "customize-cra": "^0.9.1",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-react-app": "^5.2.1",
    "eslint-plugin-flowtype": "^4.7.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.13.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.2",
    "firebase-tools": "^8.3.0",
    "husky": "^4.2.5",
    "identity-obj-proxy": "^3.0.0",
    "lint-staged": "^10.2.4",
    "next-transpile-modules": "^3.3.0",
    "prettier": "2.0.5",
    "react-test-renderer": "^16.13.1",
    "typescript": "3.9.2",
    "worker-loader": "^2.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{ts,js,tsx,jsx,scss,css,html}": [
      "prettier --write"
    ]
  }
}
