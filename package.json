{
  "private": true,
  "scripts": {
    "build": "yarn workspace esbuild-scripts bundle && yarn workspace lib-react-docs bundle && yarn workspaces foreach -ptv run build",
    "common:netlify": "NODE_NO_WARNINGS=1 netlify",
    "format": "prettier --write '**/*.{ts,js,tsx,jsx,scss,css,html,md}'",
    "format:check": "prettier --check '**/*.{ts,js,tsx,jsx,scss,css,html,md}'",
    "lint": "eslint . --cache",
    "test": "jest",
    "bump": "yarn up @types/jest @types/node @types/react @types/react-dom prettier jest husky lint-staged esbuild eslint \"@typescript-eslint/*\" \"eslint-*\"",
    "import-plugin": "yarn plugin import ./packages/yarn-plugin-monorail/bundles/@yarnpkg/plugin-monorail.js",
    "setup-plugin": "yarn workspace @dev-sam/yarn-plugin-monorail bundle && yarn import-plugin"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@dev-sam/eslint-config-common": "workspace:^0.21.0",
    "@dev-sam/jest-esbuild-transformer": "0.4.0",
    "@types/node": "^15.12.2",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "esbuild": "^0.12.8",
    "eslint": "^7.28.0",
    "eslint-import-resolver-node": "^0.3.4",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^6.0.0",
    "jest": "^27.0.4",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.1",
    "typescript": "^4.2.4"
  },
  "dependenciesMeta": {
    "core-js": {
      "built": false
    },
    "core-js-pure": {
      "built": false
    },
    "ejs": {
      "built": false
    }
  },
  "eslintConfig": {
    "extends": [
      "@dev-sam/common"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "endOfLine": "lf",
    "proseWrap": "always"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/.next/"
    ],
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "@dev-sam/jest-esbuild-transformer"
    },
    "transformIgnorePatterns": [
      "^.+\\.module\\.(css|sass|scss)$"
    ]
  },
  "lint-staged": {
    "**/*.{ts,js,tsx,jsx,scss,css,html,md}": [
      "yarn prettier --write"
    ]
  }
}
