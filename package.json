{
  "private": true,
  "scripts": {
    "build": "yarn workspaces foreach -ptv run build",
    "common:netlify": "NODE_NO_WARNINGS=1 netlify",
    "format": "prettier --write '**/*.{ts,js,tsx,jsx,scss,css,html,md,yml}'",
    "format:check": "prettier --check '**/*.{ts,js,tsx,jsx,scss,css,html,md,yml}'",
    "lint": "eslint . --cache",
    "test": "jest",
    "bump": "yarn up @types/jest @types/node jest husky lint-staged eslint \"@typescript-eslint/*\" \"eslint-*\""
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@dev-sam/eslint-config-common": "0.21.0",
    "@dev-sam/jest-esbuild-transformer": "0.4.0",
    "@types/node": "^16.9.4",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "esbuild": "^0.12.28",
    "eslint": "^7.32.0",
    "eslint-import-resolver-node": "^0.3.6",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.25.3",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^7.0.2",
    "jest": "^27.2.1",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "typescript": "^4.4.3"
  },
  "dependenciesMeta": {
    "core-js-pure": {
      "built": false
    }
  },
  "eslintConfig": {
    "extends": [
      "@dev-sam/common"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "endOfLine": "lf",
    "proseWrap": "always"
  },
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$": "@dev-sam/jest-esbuild-transformer"
    }
  },
  "lint-staged": {
    "**/*.{ts,js,tsx,jsx,scss,css,html,md,yml}": [
      "yarn prettier --write"
    ]
  },
  "packageManager": "yarn@3.0.2"
}
