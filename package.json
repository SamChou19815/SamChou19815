{
  "private": true,
  "scripts": {
    "build": "yarn workspace esbuild-scripts bundle && yarn workspaces foreach -ptv run build",
    "format": "prettier --write '**/*.{ts,js,tsx,jsx,css,html,md,yml}'",
    "format:check": "prettier --check '**/*.{ts,js,tsx,jsx,css,html,md,yml}'",
    "lint": "eslint . --cache",
    "test": "jest",
    "bump": "yarn up @types/jest @types/node typescript jest husky lint-staged esbuild eslint \"@typescript-eslint/*\" \"eslint-*\""
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@dev-sam/eslint-config-common": "0.22.0",
    "@dev-sam/jest-esbuild-transformer": "0.4.0",
    "@types/node": "^16.11.10",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "esbuild": "^0.14.0",
    "eslint": "^8.3.0",
    "eslint-import-resolver-node": "^0.3.6",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "lint-staged": "^12.1.2",
    "prettier": "^2.4.1",
    "typescript": "^4.5.2"
  },
  "eslintConfig": {
    "extends": [
      "@dev-sam/common"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "endOfLine": "lf",
    "proseWrap": "always"
  },
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$": "@dev-sam/jest-esbuild-transformer"
    }
  },
  "lint-staged": {
    "**/*.{ts,js,tsx,jsx,scss,css,html,md,yml}": [
      "yarn prettier --write"
    ]
  },
  "packageManager": "yarn@3.2.0-rc.6"
}
