{
  "private": true,
  "scripts": {
    "common:firebase": "firebase",
    "format": "prettier --write '**/*.{ts,js,tsx,jsx,scss,css,html,md}'",
    "format:check": "prettier --check '**/*.{ts,js,tsx,jsx,scss,css,html,md}'",
    "lint": "eslint . --cache",
    "test": "jest",
    "bump": "yarn up @types/jest @types/node @types/react @types/react-dom typescript prettier jest husky lint-staged eslint \"@typescript-eslint/*\" \"eslint-*\"",
    "import-plugin": "yarn plugin import ./packages/yarn-plugin-monorail/bundles/@yarnpkg/plugin-monorail.js",
    "setup-plugin": "yarn workspace @dev-sam/yarn-plugin-monorail build && yarn import-plugin"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@dev-sam/eslint-config-common": "workspace:^0.20.0",
    "@types/node": "^14.14.37",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "esbuild-runner": "^1.3.2",
    "eslint": "^7.23.0",
    "eslint-import-resolver-node": "^0.3.4",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.23.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "typescript": "^4.2.3"
  },
  "dependenciesMeta": {
    "@ampproject/toolbox-optimizer": {
      "built": false
    },
    "core-js": {
      "built": false
    },
    "core-js-pure": {
      "built": false
    },
    "ejs": {
      "built": false
    }
  },
  "eslintConfig": {
    "extends": [
      "@dev-sam/common"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "endOfLine": "lf",
    "proseWrap": "always"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/.next/"
    ],
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "esbuild-runner/jest"
    },
    "transformIgnorePatterns": [
      "^.+\\.module\\.(css|sass|scss)$"
    ]
  },
  "lint-staged": {
    "**/*.{ts,js,tsx,jsx,scss,css,html,md}": [
      "yarn prettier --write"
    ]
  }
}
