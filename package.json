{
  "private": true,
  "packageManager": "pnpm@8.6.12",
  "scripts": {
    "check": "turbo run check",
    "build": "turbo run build",
    "format": "rome format --write .",
    "lint": "rome check .",
    "bump": "pnpm up -r --latest @types/node @types/react @types/react-dom typescript husky lint-staged esbuild turbo"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/node": "^20.4.10",
    "@types/react": "^18.2.20",
    "esbuild": "^0.19.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "postcss": "^8.4.19",
    "rome": "^12.1.3",
    "tailwindcss": "^3.2.4",
    "turbo": "^1.10.12",
    "typescript": "^5.1.6"
  },
  "lint-staged": {
    "**/*.{ts,js,tsx,jsx}": [
      "pnpm rome format --write"
    ]
  }
}
