{
  "private": true,
  "packageManager": "pnpm@7.13.5",
  "scripts": {
    "check": "turbo run check",
    "build": "turbo run build",
    "format": "rome format --write .",
    "lint": "rome check .",
    "bump": "pnpm up -r --latest @types/node @types/react @types/react-dom typescript husky lint-staged esbuild"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/node": "^18.7.20",
    "@types/react": "^18.0.21",
    "esbuild": "^0.15.9",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "postcss": "^8.4.16",
    "rome": "0.10.1-next",
    "tailwindcss": "^3.1.8",
    "turbo": "^1.4.3",
    "typescript": "^4.8.3"
  },
  "lint-staged": {
    "**/*.{ts,js,tsx,jsx,scss,css,html,md,yml}": [
      "pnpm rome format --write"
    ]
  }
}
