{
  "$schema": "https://biomejs.dev/schemas/1.0.0/schema.json",
  "vcs": {
    "clientKind": "git",
    "enabled": true,
    "useIgnoreFile": true
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentSize": 2,
    "lineWidth": 100,
    "ignore": ["**/.vercel/*", "**/build/*", "**/dist/*", "**/out/*"]
  },
  "linter": {
    "enabled": true,
    "ignore": ["**/.vercel/*", "**/build/*", "**/dist/*", "**/out/*"],
    "rules": {
      "recommended": true
    }
  },
  "organizeImports": {
    "enabled": true,
    "ignore": ["**/.vercel/*", "**/build/*", "**/dist/*", "**/out/*"]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  }
}
