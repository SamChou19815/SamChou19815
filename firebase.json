{
  "hosting": [
    { "target": "blog", "public": "packages/blog/build", "ignore": ["**/.*"] },
    {
      "target": "www",
      "public": "packages/www/build",
      "ignore": ["**/.*"],
      "rewrites": [{ "source": "**", "destination": "/index.html" }]
    },
    { "target": "samlang", "public": "packages/samlang/build", "ignore": ["**/.*"] },
    {
      "target": "ten",
      "public": "packages/ten/build",
      "ignore": ["**/.*"],
      "rewrites": [
        { "source": "/api/respond", "function": "HandleTenAIMoveRequest" },
        { "source": "**", "destination": "/index.html" }
      ]
    },
    { "target": "wiki", "public": "packages/wiki/build", "ignore": ["**/.*"] }
  ]
}
