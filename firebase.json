{
  "hosting": [
    {
      "target": "blog",
      "public": "blog/build",
      "ignore": ["**/.*"]
    },
    {
      "target": "main-site-frontend",
      "public": "main-site-frontend/build",
      "ignore": ["**/.*"],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "samlang-demo-frontend",
      "public": "samlang-demo-frontend/build",
      "ignore": ["**/.*"],
      "rewrites": [
        {
          "source": "/api/**",
          "run": {
            "serviceId": "samlang-demo-backend",
            "region": "us-central1"
          }
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "samlang-docs",
      "public": "samlang-docs/build",
      "ignore": ["**/.*"]
    },
    {
      "target": "ten-web-frontend",
      "public": "ten-web-frontend/build",
      "ignore": ["**/.*"],
      "rewrites": [
        {
          "source": "/api/respond",
          "function": "HandleTenAIMoveRequest"
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  ]
}
