<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="2.5">
    <servlet>
        <servlet-name>ai-response</servlet-name>
        <servlet-class>com.developersam.web.AiResponseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ai-response</servlet-name>
